{% extends 'base.html.twig' %}

{% block blueBanner %}
    <div class="bg-primary">
        <div class="container">
            <h1 class="text-uppercase text-light fs-4 py-2">
                {{ 'edit.banner' |trans }}
            </h1>
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="card">
            <div class="card-header">
                <h3>Informations</h3>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-4 form-group my-3">
                        <div class="form-floating my-3">
                            {{ form_widget(form.owner.firstname.firstnameField) }}
                            {{ form_label(form.owner.firstname.firstnameField) }}
                        </div>
                        <div class="form-floating my-3">
                            {{ form_widget(form.owner.lastname.lastnameField) }}
                            {{ form_label(form.owner.lastname.lastnameField) }}
                        </div>
                        <div class="form-floating my-3">
                            {{ form_widget(form.businessAddress.businessAddressField) }}
                            {{ form_label(form.businessAddress.businessAddressField) }}
                        </div>
                        <div class="col-md-4 form-group my-3 d-flex w-auto align-items-center gap-5">
                            <div class="d-flex flex-column form-floating">
                                {{ form_widget(form.postalCode.postalCodeField) }}
                                {{ form_label(form.postalCode.postalCodeField) }}
                            </div>
                            <div class="d-flex flex-column form-floating">
                                {{ form_widget(form.city.cityField) }}
                                {{ form_label(form.city.cityField) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 form-group my-3">
                        <div class="d-flex flex-column form-floating my-3">
                            {{ form_widget(form.name.companyField) }}
                            {{ form_label(form.name.companyField) }}
                        </div>
                        <div class="d-flex flex-column">
                            {{ form_label(form.about) }}
                            {{ form_widget(form.about) }}
                        </div>
                    </div>
                    <div class="col-md-4 form-group my-3">
                        {{ form_label(form.logo) }}
                        {{ form_widget(form.logo) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-center">
            {{ form_row(form.save) }}
        </div>
    </div>
        {{ form_end(form) }}
{% endblock %}
