{% extends 'base.html.twig' %}

    {% block blueBanner %}
        <div class="bg-primary">
            <div class="container">
                <h1 class="text-uppercase text-light fs-4 py-2">
                    {{ 'edit.banner' |trans }}
                </h1>
            </div>
        </div>
    {% endblock %}

    {% block body %}
        <div class="container mt-5">
            <div class="card">
                <div class="card-header">
                    <h3>Informations</h3>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                    <div class="row">
                        <div class="col-md-4 form-group my-3">
                            {{ form_widget(form.users) }}
                            {{ form_label(form.businessAddress) }}
                            {{ form_widget(form.businessAddress) }}
                            <div class="col-md-4 form-group my-3 d-flex w-auto align-items-center gap-5">
                                <div class="d-flex flex-column">
                                    {{ form_label(form.postalCode) }}
                                    {{ form_widget(form.postalCode) }}
                                </div>
                                <div class="d-flex flex-column">
                                    {{ form_label(form.city) }}
                                    {{ form_widget(form.city) }}
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 form-group my-3">
                            {{ form_label(form.name) }}
                            {{ form_widget(form.name) }}
                            {{ form_label(form.about) }}
                            {{ form_widget(form.about) }}
                        </div>
                        <div class="col-md-4 form-group my-3">
                            {{ form_label(form.logo) }}
                            {{ form_widget(form.logo) }}
                        </div>
                    </div>
                </div>
            </div>
                    {{ form_end(form) }}
        </div>
    {% endblock %}
