    <form action="{{ path('app_login') }}" method="post" id="loginForm" name="loginForm">
        {% if error is defined and error %}
            <div class="row justify-content-center mt-3">
                <div class="alert alert-info justify-content-center d-flex" role="alert">
                    {{ error.messageKey|trans(error.messageData, 'security', 'fr') }}
                </div>
            </div>
        {% endif %}
        <div class="row justify-content-center">
            <div class="col-10">
                <div class="mb-3 mt-3">
                    <label class="form-label fw-bold" for="email">{{ 'login.email_adress'|trans }}</label>
                    <input type="email" id="email" class="form-control" name="email" placeholder="name@example.com">
                </div>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-10">
                <div class="mb-3">
                    <label class="form-label fw-bold" for="password">{{ 'login.password'|trans }}</label>
                    <input type="password" id="password" name="_password" class="form-control" placeholder="password">
                </div>
            </div>
        </div>


        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        {# If you want to control the URL the user is redirected to on success #}
        <input type="hidden" name="_target_path" value="{{ path('2fa_login', { '_locale': app.request.locale }) }}">

        <div class="row justify-content-center">
            <div class="col-10 mb-3 d-flex flex-row-reverse">
                <a href="{{ path('app_forgot_password_request')}}" class="link-dark">{{ 'login.forgot_password'|trans }}</a>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-10 d-flex mb-3">
                <button type="submit" class="flex-fill  btn btn-mysecu">{{ 'login.login'|trans }}</button>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-10 d-flex justify-content-center">
                <p>{{ 'login.you_have_no_account'|trans }} <a href="{{ path('app_register')}}" class="link-dark">{{ 'login.signup'|trans }}</a></p>
            </div>
        </div>
    </form>