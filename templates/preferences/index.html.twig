{% extends 'base.html.twig' %}

{% block blueBanner %}
    <div class="bg-primary">
        <div class="container">
            <h1 class="text-uppercase text-light fs-4 py-2">
                {{ 'preferences.banner' |trans }}
            </h1>
        </div>
    </div>
{% endblock %}

{% block body %}
    {{ form_start(delete_account_form) }}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            {% include 'components/PreferencesDelete.html.twig' with {'form': delete_account_form} %}
        </div>
        <div class="col-md-6">
            {% include 'components/PreferencesAccount.html.twig' with {'form': preferences_form} %}
        </div>
    </div>

    <div class="card my-5">
        <div class="card-body d-flex flex-column flex-md-row align-items-md-center justify-content-md-between">
            <div class="mb-3 mb-md-0">
                <h2 class="fs-5">Gérer mon abonnement</h2>
                <p>Abonnement actuel :
                    {% if is_granted('ROLE_FREEMIUM') %}
                        Freemium
                    {% elseif is_granted('ROLE_PREMIUM') %}
                        Premium
                    {% elseif is_granted('ROLE_VENDOR') %}
                        Vendor
                    {% endif %}
                </p>
            </div>
            <a href="{# {{ path('change_subscription') }} #}" class="btn border-dark px-5">Changer d'offre</a>
            {% if is_granted("ROLE_PREMIUM") %}
                <a href="{# {{ path('change_subscription') }} #}" class="btn border-dark px-5">Résilier mon
                    abonnement</a>
            {% endif %}
        </div>
    </div>
    <div class="card my-5">
        <div class="card-body">
            <h2 class="fs-5">Statistiques</h2>
            <div class="d-flex justify-content-around flex-wrap">
                <div class="w-auto">
                    <div class="chart-container">
                        {{ render_chart(chart1) }}
                    </div>
                </div>
                <div class="w-auto">
                    <div class="chart-container">
                        {{ render_chart(chart2) }}
                    </div>
                </div>
                <div class="w-auto">
                    <div class="chart-container">
                        {{ render_chart(chart3) }}
                    </div>
                </div>
            </div>

            {% if is_granted('ROLE_PREMIUM') %}

            {% endif %}

            {% if is_granted('ROLE_FREEMIUM') %}
                <div>
                    <p>Nombres de demande de devis : 23</p>
                    <p>Nombre de demandes de mentorat : 06</p>
                </div>
            {% endif %}
        </div>
    </div>
    {{ form_end(delete_account_form) }}
    {% endblock %}
