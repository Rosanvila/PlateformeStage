<div {{ attributes }}>

    {% for item in this.newItems %}
        <twig:Feed:CommentItem item="{{ item }}" key="{{ 'commentItem-' ~ item.id }}"/>
    {% endfor %}

    {% if this.page > 1 %}
        <div id="comment--{{ post.id }}Listpage--{{ page - 1 }}" data-live-ignore="true"></div>
    {% endif %}

    {# Current page #}
    <div id="comment--{{ post.id }}Listpage--{{ page }}" data-live-ignore="true">
        {% for item in this.items %}
            <twig:Feed:CommentItem item="{{ item }}" key="{{ 'commentItem-' ~ item.id }}"/>
        {% endfor %}
    </div>

    {% if this.hasMore %}
        <div style="display: grid; place-content: center;padding: 4rem;">
            <button data-action="live#action"
                    data-live-action-param="more"
                    data-scroll-target="loader"
                    class="btn btn-mysecu text-white"><twig:ux:icon name="bx:down-arrow-alt" height='25px' width='25px' /></button>
        </div>
    {% endif %}

</div>
