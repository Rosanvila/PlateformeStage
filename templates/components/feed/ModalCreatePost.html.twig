<div class="modal modal-post-feed fade" tabindex="-1" id="createPostModal" data-controller="feed-post-modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header border-bottom-0 pb-0">
                <div class="d-flex align-items-center flex-row">
                    <div class="col-1">
                        <img src="{{ photo }}" class="img-post rounded-circle img-fluid" alt="profile picture">
                    </div>
                    <div class="col-11 ms-3 fw-medium">
                        {{ firstname }} {{ lastname }}
                    </div>
                    <button type="button" class="position-absolute btn-close col-1" style="top: 1rem; right: 1rem"
                            data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
            </div>
            <div class="modal-body">
                <twig:Feed:FormCreatePost/>
            </div>
        </div>
    </div>
</div>