{% extends 'base.html.twig' %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="row">
            <section class="col-lg-2 col-12 h-25">
                <div class="w-75 profile-card">
                    <twig:ProfileCard
                    photo="{{ app.user.getSrcPhoto }}"
                    firstname="{{ app.user.firstname }}"
                    lastname="{{ app.user.lastname }}"
                    isVendor="true"
                    expertise="{{ app.user.expertise }}"/>
                </div>
            </section>

            <section class="col-lg-8 col-12 h-25">
                <div class="card">
                    <div class="card-body d-flex flex-column">
                        <twig:feed:ShareBox photo="{{ app.user.getSrcPhoto }}" />
                        <twig:Feed:PostList />
                    </div>
                </div>
            </section>
        </div>
    </div>
{% endblock %}